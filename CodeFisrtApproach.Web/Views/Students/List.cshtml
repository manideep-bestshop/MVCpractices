@{
}
@model List<CodeFirstApproach.Web.Models.Entities.Student>

<h1>Students</h1>
@if(Model==null)
{
    <p>No students Found</p>
}

@if(Model!=null)
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.Name</td>
                    <td>@student.Email</td>
                    <td>@student.Phone</td>
                    <td>
                        <a class="btn btn-primary" asp-controller="Students" asp-action="Edit" asp-route-id="@student.Id">Edit</a>
                         <a class="btn btn-primary" asp-controller="Students" asp-action="Delete" asp-route-id="@student.Id">Delete</a>

                    </td>
                    
                </tr>
            }
        </tbody>
    </table>
}
